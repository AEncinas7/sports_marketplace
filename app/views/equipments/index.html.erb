    <div class="container">
      <div class="row">
          <div class="title d-flex flex-column">
          <h1>Sport Equipments</h1>
          <p>What sport are you going to try today?</p>

          <form class="form-inline m-3">
            <input class="form-control mr-sm-2" type="search" placeholder="Search equipment..." aria-label="Search" name="search">
            <button class="btn my-2 my-sm-0 border" type="submit">Search</button>
          </form>
        </div>

        <div class="equip-card-container d-flex m-3">
          <% @equipments.each do |equipment| %>
          <div class="equip-card m-2">
            <div class="photos">
              <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                  <% equipment.photos.each do |photo| %>
                    <% if photo == equipment.photos.first %>
                      <div class="carousel-item active">
                    <% else %>
                      <div class="carousel-item">
                    <% end %>
                    <%= cl_image_tag photo.key, height: 160, crop: :fill, class: "d-block w-160" %>
                    </div>
                  <% end %>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="sr-only">Next</span>
                </a>
              </div>
            </div>
            <div>
              <%= link_to equipment.name, equipment_path(equipment) %> owned by <strong><%= User.find(equipment.user_id).first_name %></strong>
            </div>
          </div>
        <% end %>
      </div>
      <div id="map"
           style="width: 400px; height: 600px;"
           data-markers="<%= @markers.to_json %>"
           data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
</div>

