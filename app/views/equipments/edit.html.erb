<div class="container">
  <div class="row">
    <div class="flex-column">
      <div class="title">
        <h1><%= @equipment.name %></h1>
      </div>

      <div class="col-6">
        <%= simple_form_for(@equipment) do |f| %>
          <%= f.input :name %>
          <%= f.input :description %>
          <%= f.input :photos, as: :file, input_html: { multiple: true } %>
          <%= f.input :price %>
          <%= f.submit %>
        <% end %>
      </div>

      <div>
        <%= link_to "Back", equipment_path(@equipment) %>
      </div>
    </div>
  </div>
</div>
