<div class="container">
  <h1>New Review for <%= @equipment.name %></h1>
  <h2>The Equipment:</h2>
  <div class="row">
      <div class="col-12 col-md-6">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <% @equipment.photos.each do |photo| %>
              <% if photo == @equipment.photos.first %>
                <div class="carousel-item active">
              <% else %>
                <div class="carousel-item">
              <% end %>
              <%= cl_image_tag photo.key, height: 300, crop: :fill, class: "d-block w-400" %>
              </div>
            <% end %>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>

      <div class="col-12 col-md-6">
        <div class="description mx-3 my-5">
          <p><strong>Description:</strong> <%= @equipment.description %></p>
          <p><strong>Price:</strong> <%= @equipment.price %>CAD</p>
          <p><strong>Owner:</strong> <%= User.find(@equipment.user_id).first_name %></p>
        </div>
      </div>

    </div>
<h2>Review:</h2>
  <div class="row">
    <div class="col-3">
      <%= simple_form_for([@booking, @review]) do |f| %>
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.label :rating %><br>
        <%= f.collection_radio_buttons :rating, number = [[1], [2], [3], [4], [5]], :first, :last, item_wrapper_tag: false, boolean_style: :inline do |b| %>
            <% some = b.label{number} %>
            <%= b.radio_button + b.label {some[43]} %>
        <% end %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>

<%= link_to "Return to dashboard", bookings_path %>
</div>
